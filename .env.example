# Firebase Configuration for Article View Tracking
# Copy this file to .env and fill in your Firebase project details

# Get these values from your Firebase project settings
# https://console.firebase.google.com/project/YOUR_PROJECT/settings/general/
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Optional: Google Analytics (already configured)
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Optional: Other service configurations
VITE_DISQUS_SHORTNAME=your-disqus-shortname
VITE_MAILCHIMP_FORM_URL=your-mailchimp-form-url
