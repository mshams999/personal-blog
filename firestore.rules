rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Newsletter subscribers collection
    match /newsletter_subscribers/{subscriberId} {
      // Allow anyone to create a new subscription (public newsletter signup)
      allow create: if isValidNewsletterSubscription(request.resource.data);
      
      // Allow reading for authenticated admin users only
      allow read: if isAdmin();
      
      // Allow updating for admin users only (for unsubscribing)
      allow update: if isAdmin() && 
                    request.resource.data.keys().hasAll(['isActive', 'unsubscribedAt']) &&
                    request.resource.data.isActive == false;
      
      // Never allow deleting (keep data for analytics)
      allow delete: if false;
    }
    
    // Helper functions
    function isValidNewsletterSubscription(data) {
      return data.keys().hasAll(['email', 'subscribedAt', 'isActive', 'source']) &&
             data.email is string &&
             data.email.size() > 0 &&
             data.email.matches('.*@.*\\..*') &&  // Basic email validation
             data.subscribedAt is timestamp &&
             data.isActive == true &&
             data.source is string;
    }
    
    function isAdmin() {
      // Admin authentication - replace with your admin email
      return request.auth != null && 
             request.auth.token.email == 'mohamedshams3467@gmail.com';
    }
    
    // Article ratings collection - allows public read and write
    match /ratings/{articleSlug} {
      // Allow anyone to read ratings
      allow read: if true;
      
      // Allow anyone to create/update ratings
      allow create, update: if isValidRating(request.resource.data);
      
      // No deleting ratings (keep data for integrity)
      allow delete: if false;
    }
    
    // Helper function to validate rating data
    function isValidRating(data) {
      return data.keys().hasAll(['ratings', 'totalRatings', 'averageRating', 'slug']) &&
             data.ratings is map &&
             data.totalRatings is number &&
             data.totalRatings > 0 &&
             data.averageRating is number &&
             data.averageRating >= 1 &&
             data.averageRating <= 5 &&
             data.slug is string;
    }
    
    // Article views collection - allows public read and write
    match /articles/{articleSlug} {
      // Allow anyone to read view counts
      allow read: if true;
      
      // Allow anyone to increment view counts
      allow create, update: if true;
      
      // No deleting articles (keep data for analytics)
      allow delete: if false;
    }
    
    // Comment counts collection - allows public read, restricted write
    match /commentCounts/{postSlug} {
      // Allow anyone to read comment counts
      allow read: if true;
      
      // Allow creating/updating comment counts (for sync operations)
      // In production, you might want to restrict this to admin only
      allow create, update: if true;
      
      // No deleting comment counts (keep data for analytics)
      allow delete: if false;
    }
    
    // Allow all other operations for authenticated users (for your existing content)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
